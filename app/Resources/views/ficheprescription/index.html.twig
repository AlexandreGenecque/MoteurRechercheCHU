{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="titre">Liste des fiches de prescription</h1>

    <table  id="table" class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>    Nom fiche prescription</th>
                <th>Url</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for fichePrescription in fichePrescriptions %}
            <tr>
                <td><a href="{{ path('ficheprescription_show', { 'id': fichePrescription.id }) }}">{{ fichePrescription.id }}</a></td>
                <td>{{ fichePrescription.nomFichePrescription }}</td>
                <td>{{ fichePrescription.url }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('ficheprescription_show', { 'id': fichePrescription.id }) }}">Voir</a>
                        </li>
                        <li>
                            <a href="{{ path('ficheprescription_edit', { 'id': fichePrescription.id }) }}">Modifier</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li class="champsfiche">
            <a href="{{ path('ficheprescription_new') }}">Créer une nouvelle entrée</a> 
        </li>
        <li class="champsfiche">
            <a href="{{ path('moteur_recherche_administration') }}">Retour sur l'interface d'administration</a>
        </li>
    </ul>
{% endblock %}
